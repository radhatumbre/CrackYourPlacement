/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */

class Solution {
public:
    int getDecimalValue(ListNode* head) {
        ListNode *temp = head;
        int pow = 1;
        while (temp != NULL){
            pow *= 2;
            temp= temp->next;
        }

        temp = head;
        int ans = 0;
        while (temp){   
            ans += (temp->val * pow/2);
            pow/=2;
            temp= temp->next;
        }
        return ans;
    }
};
