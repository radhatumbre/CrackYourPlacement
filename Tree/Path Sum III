/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int count = 0;
    void pathFromOneRoot(TreeNode* root,long long targetSum, int &count){
        if(root==NULL)  return;
        
        // pick
        targetSum -= root->val;
        if(targetSum==0)    count++;
        pathFromOneRoot(root->left,targetSum,count);
        pathFromOneRoot(root->right,targetSum,count);

    }
    
    int pathSum(TreeNode* root, long long targetSum) {
        if(root){
            pathFromOneRoot(root,targetSum,count);
            pathSum(root->left,targetSum);
            pathSum(root->right,targetSum);
        }
        return count;
    }
};
